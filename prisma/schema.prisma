generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  
}

model Aluno {
  id                 Int       @id @default(autoincrement())
  cpf                String
  nome               String
  nomeResponsavel    String
  dataNasc           DateTime
  celular            String
  celularResponsavel String
  status             Boolean   @default(true)
  usuariocriacao     String?
  datacriacao        DateTime?
  usuarioalteracao   String?
  dataalteracao      DateTime?
  aula Aulas_Alunos[]

  @@map("alunos")
}

model Professor {
  id               Int       @id @default(autoincrement())
  cpf              String    @unique
  nome             String
  dataNasc         DateTime
  celular          String
  status           Boolean
  usuariocriacao   String?
  datacriacao      DateTime?
  usuarioalteracao String?
  dataalteracao    DateTime?
  aula Aula[]

  @@map("professores")
}

model Turma {
  id               Int       @id @default(autoincrement())
  descricao        String
  status           Boolean
  usuariocriacao   String?
  datacriacao      DateTime?
  usuarioalteracao String?
  dataalteracao    DateTime?
  aula Aula[]

  @@map("turmas")
}

model Usuario {
  id       Int     @id @default(autoincrement())
  name     String
  username String
  password String
  status   Boolean

  @@map("usuarios")
}

model Aula {
  id Int @id @default(autoincrement())
  professorId Int
  professor Professor @relation(fields: [professorId], references: [id])
  turmaId Int
  turma Turma @relation(fields: [turmaId], references: [id])
  aluno Aulas_Alunos[]
  tema String
  status Boolean
  usuariocriacao   String?
  datacriacao      DateTime?
  usuarioalteracao String?
  dataalteracao    DateTime?

  @@map("aulas")
}

model Aulas_Alunos {
  aula Aula @relation(fields: [aulaId], references: [id])
  aulaId Int
  aluno Aluno @relation(fields: [alunoId], references: [id])
  alunoId Int

  @@id([aulaId, alunoId])
  @@map("aula_aluno")
}