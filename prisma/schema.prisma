// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Aluno {
  id                 Int       @id @default(autoincrement())
  cpf                String
  nome               String
  nomeResponsavel    String
  dataNasc           DateTime
  celular            String
  celularResponsavel String
  status             Boolean   @default(true)
  usuariocriacao     String?
  datacriacao        DateTime?
  usuarioalteracao   String?
  dataalteracao      DateTime?
  aula               Aluno_Aulas[]

  @@map("alunos")
}

model Professor {
  id               Int       @id @default(autoincrement())
  cpf              String
  nome             String
  dataNasc         DateTime
  celular          String
  status           Boolean
  usuariocriacao   String?
  datacriacao      DateTime?
  usuarioalteracao String?
  dataalteracao    DateTime?
  aula             Aula[]

  @@map("professores")
}

model Turma {
  id               Int       @id @default(autoincrement())
  descricao        String
  status           Boolean
  usuariocriacao   String?
  datacriacao      DateTime?
  usuarioalteracao String?
  dataalteracao    DateTime?
  aula             Aula[]

  @@map("turmas")
}

model Usuario {
  id       Int     @id @default(autoincrement())
  name     String
  username String
  password String
  status   Boolean

  @@map("usuarios")
}

model Aula {
  id               Int        @id @default(autoincrement())
  professor        Professor? @relation(fields: [professorId], references: [id])
  professorId      Int?
  turma            Turma?     @relation(fields: [turmaId], references: [id])
  turmaId          Int?
  aluno            Aluno_Aulas[]
  tema             String
  status           Boolean
  usuariocriacao   String?
  datacriacao      DateTime?
  usuarioalteracao String?
  dataalteracao    DateTime?

  @@map("aulas")
}

model Aluno_Aulas {
  aluno Aluno @relation(fields: [alunoId], references: [id])
  alunoId Int
  aula Aula @relation(fields: [aulaId], references: [id])
  aulaId Int

  @@id([alunoId, aulaId])
}